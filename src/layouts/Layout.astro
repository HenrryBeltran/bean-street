---
import SEO from "../components/SEO.astro";

interface Props {
  generator: string;
  title: string;
  description: string;
  websiteUrl?: string;
  altImage: string;
}

const url = Astro.url.href;

const {
  generator,
  title,
  description,
  websiteUrl = url,
  altImage,
} = Astro.props as Props;
---

<style is:global>
  :root {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }
</style>

<html lang="en">
  <head>
    <link rel="stylesheet" href="/beanstreet/style.css" />
    <SEO {generator} {title} {description} {websiteUrl} {altImage} />
    <!-- Preload Font -->
    <link
      rel="preload"
      href="/fonts/boska-variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/poppins-variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>
  <body class="bg-beige-100 selection:bg-yellow-200 selection:text-brown-900">
    <slot />
  </body>
</html>
